<odoo>
    <record id="view_sales_representative_form" model="ir.ui.view">
        <field name="name">sales.representative.form</field>
        <field name="model">sales.representative</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_sales_representative_tree" model="ir.ui.view">
        <field name="name">sales.representative.tree</field>
        <field name="model">sales.representative</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record> 
</odoo>
